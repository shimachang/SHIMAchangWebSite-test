{
  "env": {
    "browser": true,
    "es2017": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parser": "babel-eslint",
  "globals": {
    "jQuery": "readonly",
    "$": "readonly"
  },
  "root": true,
  "plugins": ["prettier"],
  "rules": {
    "no-undef": ["off"],
    "prettier/prettier": [
      "error",
      {
        "printWidth": 140,
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "always"
      }
    ]
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
